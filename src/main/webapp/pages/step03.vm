    function toRegister(rpCode, startTime, endTime) {
        $("#rpCode").val(rpCode);
        $("#startTime").val(startTime);
        $("#endTime").val(endTime);
        $("#form").submit();
    }


    $(function () {
        showLoading();

        loadWorkSchedule();

        $("input:radio").change(function () {
            loadWorkSchedule();
        });
    });
</script>






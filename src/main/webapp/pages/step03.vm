<script type="text/javascript">
    function showLoading() {
        $(".schedule").html('');
        $(".schedule").append('<img src="img/loading.gif" /> ');
        $(".schedule").append('加载中。。。请稍等。。。');
    }

//    function check(urlinfo) {
//        showLoading();
//        $(".schedule").load(urlinfo);
//    }

    function check(page) {
        loadWorkSchedule(page);
    }

    function enable() {
        $("input:radio").attr('disabled', false);
    }

    function disable() {
        $("input:radio").attr('disabled', true);
    }

    function loadWorkSchedule(page) {
        disable();
        showLoading();
        var val = $("input:radio:checked").val();

        if (val == 1) {
            $("#zjtd").hide();
            loadDptWork(page);
        } else {
            $("#zjtd").show();
            loadDocWork(page);
        }
    }

    function loadDocWork(page) {
        var d = {
            docName: $("#docName").val(),
            deptName: $("#dptName").val()
        };

        if(!!page) {
            d['page.pageNum'] = page;
        }

        var xhr = jQuery.ajax({
            url: 'load_doc_schedule',
            type: 'POST',
            dataType: 'html',
            data: d,
            cache: false
        });

        xhr.done(function(data) {
            $(".schedule").html(data);
            enable();
        });

        xhr.fail(function(data) {
            $(".schedule").html('加载失败！请重新加载页面！');
            enable();
        });
    }

    function loadDptWork(page) {
        var d = {
            deptName: $("#dptName").val()
        };

        if(!!page) {
            d['page.pageNum'] = page;
        }

        var xhr = jQuery.ajax({
            url: 'register_loadWorkScheamDepart',
            type: 'POST',
            dataType: 'html',
            data: d,
            cache: false
        });

        xhr.done(function(data) {
            $(".schedule").html(data);
            enable();
        });

        xhr.fail(function(data) {
            $(".schedule").html('加载失败！请重新加载页面！');
            enable();
        });




